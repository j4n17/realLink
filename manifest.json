{
  "manifest_version": 3,
  "name": "Domain-Specific Link Modifier",
  "version": "1.1",
  "description": "Automatically modify href of anchor tags based on the domain's custom rules",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "dist/popup.html"
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/content.js"
      ]
    }
  ]
}
